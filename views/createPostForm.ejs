<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body style="position: relative;">
    <nav>
        <div>
            <a href="/">The Odin"s Club</a>
        </div>
        <div>
            <%if (locals.currentUser) {%>
                <a href="/log-out">LOG OUT</a>
            <%} else { %>
                <a href="/sign-up">
                    Sign Up
                </a>
            <%}%>
        </div>
    </nav>
    <%
        const error = (name) => errors[name]?.msg;
        const hasError = (name) => Boolean(errors[name]);
    %>
    <div style="position: absolute; inset: 0; display: flex; justify-content: center; align-items: center; background-color: rgba(154, 140, 140, 0.4);" id="createMessage">
        <form style="background-color: white; width: 100%; max-width: 460px; display: flex; flex-direction: column; gap: 4px; padding: 8px; border-radius: 8px;" action="/create-post" method="post">
            <h2 style="color: blueviolet; font-size: larger; text-align: center;">Whats on your mind</h2>
            <div class="input-bx">
                <label for="postTitle">post title</label>
                <input required type="text" id="postTitle" name="postTitle" placeholder="feel free, we dont judge here">
                <% if (error('postTitle')) { %>
                    <small style="color:#ff4d4d;"><%= error('postTitle') %></small>
                <% } %>
            </div>
            <button style="padding: 4px 12px; border: none; border-radius: 4px; background-color: blueviolet; color: white;" type="submit">Submit</button>
        </form>
    </div>
</body>
</html>