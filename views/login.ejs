<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Odin's Club login page</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body >
    <nav>
        <div>
            <a href="/">The Odin"s Club</a>
        </div>
        <div>
            <%if (locals.currentUser) {%>
                <a href="/log-out">LOG OUT</a>
            <%} else { %>
                <a href="/sign-up">
                    Sign Up
                </a>
            <%}%>
        </div>
    </nav>
    <%
        const error = (name) => errors[name]?.msg;
        const hasError = (name) => !!errors[name];
    %>

    <section>
        <div style="position: absolute; left: 0; top:0; width: 100%; height: 100%; background-color: rgba(233, 217, 217, 0.5)">
            <div style="background-color: white; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); padding: 20px; width:100%; max-width: 400px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h1 style="font:bold; color: blue; font-family: mono-san; text-align: center">Login</h1>
                <form action="/login" method="POST" style="display: flex; flex-direction: column; gap: 12px; width: 100%; justify-content: center; align-items: center">
                    <div style="width: 100%;">
                        <input id="email" required name="email" placeholder="email" type="email" value="<%= oldInput.email || '' %>" style="border-radius: 20px; padding: 10px; border: none; outline: 2px #6066FF solid; outline-offset: -2px; color: rgba(0,0,0,0.7); width: 100%" />
                        <% if (error('email')) { %>
                            <small style="color:#ff4d4d;"><%= error('email') %></small>
                        <% } %>
                    </div>

                    <div style="width: 100%;">
                        <input id="password" required name="password" type="password" placeholder="password" style="border-radius: 20px; padding: 10px; border: none; outline: 2px #6066FF solid; outline-offset: -2px; color: rgba(0,0,0,0.7); width: 100%"  />
                        <% if (error('password')) { %>
                            <small style="color:#ff4d4d;"><%= error('password') %></small>
                        <% } %>
                    </div>
                    <button type="submit" style="max-width: 153px; width: 100px; padding: 10px; border-radius: 20px; border: none; background-color: #252EFF; color: white; ">Log In</button>
                </form>
                <% if (failureMessage) { %>
                    <div style="color:#ff4d4d; margin-bottom:10px;">
                        <%= failureMessage %>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <script src="/js/main.js" defer></script>
</body>
</html>